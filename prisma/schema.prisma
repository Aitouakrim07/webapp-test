generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// UCPE (Universal Customer Premises Equipment) model
model UCPE {
  id          String      @id @default(cuid())
  name        String
  ipAddress   String      
  location    String
  status      Status      @default(OFFLINE) 
  lastSeen    DateTime    @default(now())
  frpPort     Int?        @unique  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  @@map("ucpe")
}

enum Status { 
  ONLINE 
  OFFLINE 
  MAINTENANCE 
}
